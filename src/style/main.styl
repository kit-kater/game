body
    width 100vw
    height 100vh
    overflow hidden
.wrapper
    width 100vw
    height 100vh
    background-image url(../img/sea.jpg)
    background-repeat no-repeat
    background-size cover
    position relative
    &__link
        position absolute
        bottom 60px
        left 50%
        transform translateX(-50%)
        img
            animation-name: bounce;
            animation-delay: 6s
            transform-origin: center bottom;
            animation-duration: 2s;
            animation-fill-mode: both;
            animation-iteration-count: infinite;
.base
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    z-index 2
.ship
    position absolute
    top -10vw
    right 0vw
    z-index 3
    width 500px
    height 500px
    img
        position absolute
.explosion
    display none
    width 500px
    height 500px
    position absolute
    img        
        opacity 0        
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)
        transition opacity .2s
    .explosion-1
        opacity 0
        animation fadeInImg .15s
    .explosion-2
        opacity 0
        animation fadeInImg .15s .1s
    .explosion-3
        opacity 0
        animation fadeInImg .15s .2s
    .explosion-4
        opacity 0
        animation fadeInImg .15s .3s

@keyframes toBase {
    0%{
        top: -10%
        right: 0
    }
    100% {
        top: 5%
        right: 25%
    }
}
.base-bullet
    position absolute
    width 54px
    height 54px
    left 50%
    top 50%
    opacity 0
    z-index 1
    transition opacity .2s
    //transition left .5s, top .5s
.splash
    display none
    position relative
    width 207px
    height 207px
    z-index 10
    img
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)
        opacity 0
        transition opacity .2s
    .splash-1
        opacity 0
        animation fadeInImg .15s
    .splash-2
        opacity 0
        animation fadeInImg .15s .1s
    .splash-3
        opacity 0
        animation fadeInImg .15s .2s
    .splash-4
        opacity 0
        animation fadeInImg .15s .3s
    .splash-5
        opacity 0
        animation fadeInImg .15s .4s
    .splash-6
        opacity 0
        animation fadeInImg .15s .5s
    
@keyframes fadeInImg {
    0%{
        opacity: 0;
    }
    20% {
        opacity 1;
    }
    70% {
        opacity 1;
    }
    100% {
        opacity 0;
    }
}
@keyframes bounce {
  from,
  20%,
  53%,
  80%,
  to {
    -webkit-animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }

  40%,
  43% {
    -webkit-animation-timing-function: cubic-bezier(0.755, 0.05, 0.855, 0.06);
    animation-timing-function: cubic-bezier(0.755, 0.05, 0.855, 0.06);
    -webkit-transform: translate3d(0, -30px, 0);
    transform: translate3d(0, -30px, 0);
  }

  70% {
    -webkit-animation-timing-function: cubic-bezier(0.755, 0.05, 0.855, 0.06);
    animation-timing-function: cubic-bezier(0.755, 0.05, 0.855, 0.06);
    -webkit-transform: translate3d(0, -15px, 0);
    transform: translate3d(0, -15px, 0);
  }

  90% {
    -webkit-transform: translate3d(0, -4px, 0);
    transform: translate3d(0, -4px, 0);
  }
}

.bounce {
  -webkit-animation-name: bounce;
  animation-name: bounce;
  -webkit-transform-origin: center bottom;
  transform-origin: center bottom;
}